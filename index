    <script>
        const API_KEY = "28a319d5da8a97fe0488bd10b1aaa1e6";

        function caricaMeteo() {
            const citta = document.getElementById("citta").value.trim();
            if (citta === "") return;

            const url = `https://api.openweathermap.org/data/2.5/weather?q=${citta}&units=metric&lang=it&appid=${API_KEY}`;

            fetch(url)
                .then(response => {
                    if (!response.ok) {
                        throw new Error("Errore");
                    }
                    return response.json();
                })
                .then(data => {
                    document.getElementById("meteo").innerHTML = `
                        <h2>${data.name}</h2>
                        <p>ğŸŒ¡ï¸ Temperatura: ${data.main.temp} Â°C</p>
                        <p>â˜ï¸ Meteo: ${data.weather[0].description}</p>
                        <p>ğŸ’¨ Vento: ${data.wind.speed} m/s</p>
                        <p>ğŸ•’ Dati in tempo reale</p>
                    `;
                })
                .catch(() => {
                    document.getElementById("meteo").innerHTML =
                        "âŒ CittÃ  non trovata o errore API";
                });
        }
    </script>

